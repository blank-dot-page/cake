{
  "name": "@blankdotpage/cake",
  "version": "0.1.25",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/cake/react/index.d.ts",
      "import": "./dist/cake/react/index.js"
    },
    "./extensions/*": {
      "types": "./dist/cake/extensions/*/index.d.ts",
      "import": "./dist/cake/extensions/*/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.build.json",
    "build:demo": "npm run build && npm --workspace demo run build",
    "test": "vitest run",
    "test:browser": "vitest run --project browser",
    "test:browser:ios": "vitest run --project browser-ios",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "npm run test && npm run build",
    "demo": "npm --workspace demo run dev"
  },
  "dependencies": {
    "lucide-react": "^0.395.0",
    "turndown": "^7.2.0"
  },
  "peerDependencies": {
    "@codemirror/state": "^6.4.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@codemirror/state": "^6.4.1",
    "@types/node": "^20.12.7",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@types/turndown": "^5.0.5",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/browser": "^4.0.17",
    "@vitest/browser-playwright": "^4.0.17",
    "playwright": "^1.46.0",
    "prettier": "^3.8.1",
    "typescript": "^5.5.4",
    "vite": "^5.4.1",
    "vitest": "^4.0.17",
    "vitest-browser-react": "^2.0.2"
  },
  "workspaces": [
    "demo"
  ]
}
